@model KurumsalProjem.Northwind.MvcWebUI.Models.CategoryListViewModel

<div class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        if (item.CategoryId==Model.CurrentCategory)
        {
            css += " active";
        }
        <a class="@css" href="/Product/Index?category=@item.CategoryId">@item.CategoryName</a>
    }
</div>
