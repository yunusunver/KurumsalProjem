@model KurumsalProjem.Northwind.MvcWebUI.Models.CartSummaryViewModel


<ul class="dropdown-menu">
    @foreach (var item in Model.Cart.CartLines)
    {
        <li>
            <a href="">@item.Product.ProductName <span class="badge">@item.Quantity</span></a>
        </li>
    }
    <li role="separator" class="divider"></li>
    <li>
        <a href=""><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true">@Model.Cart.Total TL</span></a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to cart details</a>
    </li>
</ul>